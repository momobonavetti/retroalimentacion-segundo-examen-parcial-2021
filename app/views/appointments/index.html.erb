<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Appointment date</th>
      <th>Worker</th>
      <th>Medical center</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointment_date %></td>
        <td><strong><%= appointment.worker.full_name %> </strong>(<%= appointment.worker.worker_type.name %>)</td>
        <td><%= appointment.medical_center.name%></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
